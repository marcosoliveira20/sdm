<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        tools:context=".FirstFragment">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTextPersonName"
            android:hint="Ex: Zé Bezerra"
            tools:layout_editor_absoluteX="17dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editTextPersonAddress"
            android:hint="Alameda Enrolados, 2010"
            tools:layout_editor_absoluteX="20dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
    />
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editTextPersonCellphone"
            android:hint="Ex: 11 988776655"
            tools:layout_editor_absoluteX="17dp" app:layout_constraintTop_toBottomOf="@+id/textView3"
    />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editTextPersonPhone"
            android:hint="Ex: 11 40028922"
            tools:layout_editor_absoluteX="17dp" app:layout_constraintTop_toBottomOf="@+id/textView4"
    />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextPersonEmail"
            android:hint="Ex: jose@email.com.br"
            tools:layout_editor_absoluteX="17dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
    />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="vertical"
            app:layout_constraintGuide_end="391dp"/>
    <TextView
            android:text="Nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            tools:layout_editor_absoluteX="-1dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"/>
    <TextView
            android:text="Endereço"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            tools:layout_editor_absoluteX="-1dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPersonName"/>
    <TextView
            android:text="Celular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            tools:layout_editor_absoluteX="-1dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPersonAddress"/>
    <TextView
            android:text="Telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            tools:layout_editor_absoluteX="-1dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPersonCellphone"/>
    <TextView
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            tools:layout_editor_absoluteX="-1dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPersonPhone"/>
</androidx.constraintlayout.widget.ConstraintLayout>